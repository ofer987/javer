<h1>Listing photos</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Filename</th>
      <th>Taken at</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.user %></td>
        <td><%= photo.name %></td>
        <td><%= photo.description %></td>
        <td><%= photo.filename %></td>
        <td><%= photo.taken_at %></td>
        <td><%= link_to 'Show', user_photo_path(@user, photo) %></td>
        <td><%= link_to 'Edit', edit_user_photo_path(@user, photo) %></td>
        <td><%= link_to 'Destroy', [@user, photo], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_user_photo_path(@user) %>
